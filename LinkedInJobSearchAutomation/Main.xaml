<?xml version="1.0" encoding="utf-8"?>
<Activity mc:Ignorable="sap sap2010" x:Class="AgenticProcess.Main"
 xmlns="http://schemas.microsoft.com/netfx/2009/xaml/activities"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:sap="http://schemas.microsoft.com/netfx/2009/xaml/activities/presentation"
 xmlns:sap2010="http://schemas.microsoft.com/netfx/2010/xaml/activities/presentation"
 xmlns:ui="http://schemas.uipath.com/workflow/activities">
 <Sequence DisplayName="Main Sequence">

   <!-- Open LinkedIn -->
   <ui:OpenBrowser BrowserType="Chrome" DisplayName="Open LinkedIn" Url="https://www.linkedin.com/login">
     <Sequence>
       <ui:TypeInto DisplayName="Type Email" Text="[YourEmail]" DelayBetweenKeys="100" EmptyField="True" />
       <ui:TypeInto DisplayName="Type Password" Text="[YourPassword]" DelayBetweenKeys="100" EmptyField="True" />
       <ui:Click DisplayName="Click Sign In" />
     </Sequence>
   </ui:OpenBrowser>

   <Delay Duration="00:00:05" DisplayName="Wait for Login" />

   <!-- First search: Java Software Fresher -->
   <ui:TypeInto DisplayName="Search Java Fresher" Text="Java Software Fresher" DelayBetweenKeys="100" EmptyField="True" />
   <SendHotkey Key="enter" DisplayName="Enter Java Fresher Search" />
   <Delay Duration="00:00:05" DisplayName="Wait Results Java" />
   <WriteLine Text="Scrape results for Java Fresher (add Data Scraping here)" />

   <!-- Second search: HTML CSS JS Fresher -->
   <ui:TypeInto DisplayName="Search HTML CSS JS Fresher" Text="HTML CSS JS Fresher" DelayBetweenKeys="100" EmptyField="True" />
   <SendHotkey Key="enter" DisplayName="Enter HTML CSS JS Fresher Search" />
   <Delay Duration="00:00:05" DisplayName="Wait Results HTML CSS JS" />
   <WriteLine Text="Scrape results for HTML CSS JS Fresher (add Data Scraping here)" />

   <!-- Excel Export Placeholder -->
   <WriteLine Text="Export results to JobResults.xlsx after scraping." />

 </Sequence>
</Activity>
